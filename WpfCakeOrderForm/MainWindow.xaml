<Window x:Class="WpfCakeOrderForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCakeOrderForm"
        mc:Ignorable="d"
         Height="525" Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen">
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Background.jpg"/>
        </Border.Background>
        <StackPanel>
            <Grid>
                <Grid.Background>
                    <ImageBrush/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                </Grid.RowDefinitions>
                <Canvas Grid.ColumnSpan ="4" Background="#F5F5F5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton GroupName="Radio" Margin="10,10,0,20">
                        <RadioButton.Background>
                            <ImageBrush ImageSource="/Untitled-2.png" Stretch="None"/>
                        </RadioButton.Background>
                    </RadioButton>
                    <RadioButton GroupName="Radio" Margin="4,10,0,20">
                        <RadioButton.Background>
                            <ImageBrush ImageSource="/Untitled-1.png" Stretch="None"/>
                        </RadioButton.Background>
                    </RadioButton>
                    <RadioButton GroupName="Radio" Margin="4,10,0,20">
                        <RadioButton.Background>
                            <ImageBrush ImageSource="/Untitled-3.png" Stretch="None"/>
                        </RadioButton.Background>
                    </RadioButton>
                </StackPanel>
            </Grid>
            
        </StackPanel>
    </Border>
</Window>
